<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android"
	android:dither="true">
	<item android:state_pressed="true">
		<shape>
			<gradient android:angle="315" android:startColor="@color/yellow" android:endColor="@color/android_yellow"/>
		</shape>
	</item>
	<item android:state_focused="true">
		<shape>
			<gradient android:angle="315" android:startColor="@color/yellow" android:endColor="@color/android_yellow"/>
		</shape>
	</item>
	<item>
		<shape>
			<gradient android:angle="315" android:startColor="@color/white" android:endColor="@color/light_gray"/>
		</shape>
	</item>
</selector>